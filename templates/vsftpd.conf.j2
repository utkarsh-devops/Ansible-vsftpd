chmod_enable={{ vsftpd_chmod_enable }}
file_open_mode={{ vsftpd_file_open_mode }}
local_umask={{ vsftpd_local_umask }}
{% if vsftpd_chown_uploads is defined %}
chown_uploads={{ vsftpd_chown_uploads }}
{% endif %}
{% if vsftpd_chown_username is defined %}
chown_username={{ vsftpd_chown_username }}
{% endif %}
utf8_filesystem={{ vsftpd_utf8_filesystem }}
force_dot_files={{ vsftpd_force_dot_files }}
xferlog_std_format={{ xferlog_std_format }}
log_ftp_protocol={{ log_ftp_protocol }}
